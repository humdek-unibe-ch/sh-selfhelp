{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "500 Internal Server Error Response",
    "description": "Schema for 500 Internal Server Error responses.",
    "allOf": [
        { "$ref": "../common/_error_response_envelope.json" }
    ],
    "properties": {
        "status": {
            "type": "integer",
            "enum": [500],
            "description": "HTTP status code 500 Internal Server Error."
        },
        "message": {
            "type": "string",
            "enum": ["Internal Server Error"],
            "description": "Standard message for 500 errors."
        }
    }
}
