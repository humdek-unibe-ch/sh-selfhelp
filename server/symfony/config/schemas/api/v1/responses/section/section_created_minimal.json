{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Section Created Minimal Response",
    "description": "Schema for the successful minimal response of creating a page section or a child section.",
    "allOf": [
        { "$ref": "../common/_response_envelope.json" }
    ],
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Unique identifier for the created section."
                },
                "position": {
                    "type": "integer",
                    "description": "Position of the created section."
                }
            },
            "required": [
                "id",
                "position"
            ]
        }
    },
    "required": [
        "data"
    ]
}
