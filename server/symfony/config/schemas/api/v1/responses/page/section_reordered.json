{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Section Reordered Success Response",
    "description": "Schema for the successful response when a section is reordered.",
    "allOf": [
        { "$ref": "../common/_response_envelope.json" }
    ],
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "The ID of the reordered section."
                },
                "position": {
                    "type": "integer",
                    "description": "The new position of the section."
                }
            },
            "required": [
                "id",
                "position"
            ]
        }
    },
    "required": [
        "data"
    ]
}
