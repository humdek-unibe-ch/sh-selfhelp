{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Admin Get Page Sections Success Response",
    "description": "Schema for the successful response of getting page sections for an admin.",
    "allOf": [
        { "$ref": "../../common/_response_envelope.json" }
    ],
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "pageKeyword": { "type": "string", "description": "The keyword of the page these sections belong to." },
                "sections": {
                    "type": "array",
                    "description": "List of page sections.",
                    "items": { "$ref": "#/definitions/sectionItem" }
                }
            },
            "required": ["pageKeyword", "sections"]
        }
    },
    "required": ["data"],
    "definitions": {
        "sectionItem": { "$ref": "../../entities/page_section_entity.json" }
    }
}


