{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Unused Sections Response",
  "description": "Array of unused sections (not in hierarchy and not assigned to pages)",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Section ID"
      },
      "name": {
        "type": "string",
        "description": "Section name"
      },
      "idStyles": {
        "type": "integer",
        "description": "Style ID"
      },
      "styleName": {
        "type": ["string", "null"],
        "description": "Style name"
      }
    },
    "required": ["id", "name", "idStyles"],
    "additionalProperties": false
  }
}
