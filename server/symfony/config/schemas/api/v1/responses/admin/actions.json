{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Actions List Response",
  "properties": {
    "actions": {
      "type": "array",
      "items": {
        "$ref": "action.json"
      }
    },
    "pagination": {
      "type": "object",
      "properties": {
        "page": { "type": "integer" },
        "pageSize": { "type": "integer" },
        "totalCount": { "type": "integer" },
        "totalPages": { "type": "integer" },
        "hasNext": { "type": "boolean" },
        "hasPrevious": { "type": "boolean" }
      },
      "required": ["page", "pageSize", "totalCount", "totalPages", "hasNext", "hasPrevious"],
      "additionalProperties": false
    }
  },
  "required": ["actions", "pagination"],
  "additionalProperties": false
}


