{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Assets List Response",
  "description": "Response schema for assets list with pagination",
  "properties": {
    "assets": {
      "type": "array",
      "description": "List of assets",
      "items": { "$ref": "asset.json" }
    },
    "pagination": {
      "type": "object",
      "description": "Pagination information",
      "properties": {
        "page": { "type": "integer", "description": "Current page number", "minimum": 1 },
        "pageSize": { "type": "integer", "description": "Number of items per page", "minimum": 1 },
        "total": { "type": "integer", "description": "Total number of assets", "minimum": 0 },
        "totalPages": { "type": "number", "description": "Total number of pages", "minimum": 0 }
      },
      "required": ["page", "pageSize", "total", "totalPages"],
      "additionalProperties": false
    }
  },
  "required": ["assets", "pagination"],
  "additionalProperties": false
}


