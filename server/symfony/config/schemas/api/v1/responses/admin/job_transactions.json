{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job Transactions Response",
  "description": "Response envelope for job transactions list",
  "allOf": [
    {
      "$ref": "../common/_response_envelope.json"
    },
    {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "transaction_id": {
                "type": "integer",
                "description": "Transaction ID"
              },
              "transaction_time": {
                "type": "string",
                "description": "Transaction timestamp"
              },
              "transaction_type": {
                "type": "string",
                "description": "Type of transaction (Add new entry, Status changed, etc.)"
              },
              "transaction_verbal_log": {
                "type": "string",
                "description": "Detailed transaction log"
              },
              "user": {
                "type": ["string", "null"],
                "description": "User who performed the transaction"
              }
            },
            "required": ["transaction_id", "transaction_time", "transaction_type", "transaction_verbal_log"]
          }
        }
      },
      "required": ["data"]
    }
  ]
} 