{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "User Response",
  "description": "Schema for user data response",
  "properties": {
    "id": { "type": "integer", "description": "User ID" },
    "email": { "type": "string", "description": "User's email address" },
    "name": { "type": ["string", "null"], "description": "User's display name" },
    "user_name": { "type": ["string", "null"], "description": "User's username" },
    "last_login": { "type": "string", "description": "Last login information" },
    "status": { "type": "string", "description": "User status" },
    "blocked": { "type": "boolean", "description": "Whether the user is blocked" },
    "code": { "type": "string", "description": "Validation code" },
    "groups": { "type": ["string", "array"], "description": "User groups (string for list view, array for detail view)" },
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "description": {"type": ["string", "null"]}
        }
      },
      "description": "User roles (only in detail view)"
    },
    "user_activity": { "type": "integer", "description": "User activity count" },
    "user_type_code": { "type": ["string", "null"], "description": "User type code" },
    "user_type": { "type": ["string", "null"], "description": "User type name" },
    "id_genders": { "type": ["integer", "null"], "description": "Gender ID" },
    "id_languages": { "type": ["integer", "null"], "description": "Language ID" },
    "id_userTypes": { "type": ["integer", "null"], "description": "User type ID" }
  },
  "required": ["id", "email"],
  "additionalProperties": false
}


