{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Frontend Get Page Success Response",
    "description": "Schema for the successful response of getting a single page for frontend users with detailed section hierarchy.",
    "allOf": [
        { "$ref": "../common/_response_envelope.json" }
    ],
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "page": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Unique identifier for the page"
                        },
                        "keyword": {
                            "type": "string",
                            "description": "Page keyword/identifier"
                        },
                        "url": {
                            "type": ["string", "null"],
                            "description": "Page URL path"
                        },
                        "parent_page_id": {
                            "type": ["integer", "null"],
                            "description": "ID of parent page if this is a child page"
                        },
                        "is_headless": {
                            "type": "boolean",
                            "description": "Whether this page is headless (no navigation)"
                        },
                        "nav_position": {
                            "type": ["integer", "null"],
                            "description": "Position in navigation menu"
                        },
                        "footer_position": {
                            "type": ["integer", "null"],
                            "description": "Position in footer"
                        },
                        "sections": {
                            "type": "array",
                            "description": "Array of sections that make up the page content",
                            "items": {
                                "$ref": "../../common/_section_recursive.json"
                            }
                        }
                    },
                    "required": [
                        "id", "keyword", "url", "is_headless", "sections"
                    ]
                }
            },
            "required": [
                "page"
            ]
        }
    },
    "required": [
        "data"
    ]
}
