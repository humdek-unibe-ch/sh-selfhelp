{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Form Deleted Response",
  "description": "Response schema for successful form deletion",
  "allOf": [
    { "$ref": "../common/_response_envelope.json" },
    {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "record_id": {
              "type": "integer",
              "description": "The ID of the deleted record",
              "minimum": 1
            }
          },
          "required": ["record_id"],
          "additionalProperties": false
        }
      },
      "required": ["data"]
    }
  ]
}
