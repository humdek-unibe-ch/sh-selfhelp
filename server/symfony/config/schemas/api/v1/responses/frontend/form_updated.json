{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Form Updated Response",
  "description": "Response schema for successful form update",
  "allOf": [
    { "$ref": "../common/_response_envelope.json" },
    {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "record_id": {
              "type": "integer",
              "description": "The ID of the updated record",
              "minimum": 1
            },
            "section_id": {
              "type": "integer",
              "description": "The section ID that was updated",
              "minimum": 1
            },
            "page_id": {
              "type": "integer",
              "description": "The ID of the page containing the form",
              "minimum": 1
            },
            "updated_at": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp when the form was updated"
            }
          },
          "required": [
            "record_id",
            "section_id",
            "page_id",
            "updated_at"
          ],
          "additionalProperties": false
        }
      },
      "required": ["data"]
    }
  ]
}
