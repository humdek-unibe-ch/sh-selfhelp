{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auth Refresh Token Success Response",
  "description": "Schema for a successful token refresh, providing a new access token and refresh token.",
  "allOf": [
    { "$ref": "../common/_response_envelope.json" }
  ],
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string",
          "description": "The new JWT access token."
        },
        "refresh_token": {
          "type": "string",
          "description": "The new JWT refresh token hash."
        }
      },
      "required": [
        "access_token",
        "refresh_token"
      ]
    }
  },
  "required": [
    "data"
  ]
}
