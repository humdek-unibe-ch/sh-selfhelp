{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auth 2FA Verify Success Response",
  "description": "Schema for a successful two-factor authentication verification, providing tokens and user details.",
  "allOf": [
    { "$ref": "../common/_response_envelope.json" }
  ],
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string",
          "description": "JWT access token."
        },
        "refresh_token": {
          "type": "string",
          "description": "JWT refresh token hash."
        },
        "user": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "User ID."
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "User email address."
            },
            "name": {
              "type": "string",
              "description": "User's name."
            },
            "language_id": {
              "type": ["integer", "null"],
              "description": "User's preferred language ID."
            },
            "language_locale": {
              "type": ["string", "null"],
              "description": "User's preferred language locale (e.g., 'en', 'de')."
            }
          },
          "required": [
            "id",
            "email",
            "name",
            "language_id",
            "language_locale"
          ]
        }
      },
      "required": [
        "access_token",
        "refresh_token",
        "user"
      ]
    }
  },
  "required": [
    "data"
  ]
}
