{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Complete Validation Response",
  "description": "Schema for completing user account validation with password and profile data",
  "allOf": [
    { "$ref": "../common/_response_envelope.json" }
  ],
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "Success message"
        },
        "user_id": {
          "type": "integer",
          "description": "User ID"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "User email address"
        },
        "name": {
          "type": ["string", "null"],
          "description": "User's name"
        }
      },
      "required": [
        "message",
        "user_id",
        "email"
      ]
    }
  },
  "required": [
    "data"
  ]
}
