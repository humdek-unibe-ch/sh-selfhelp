{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Style Entity",
    "description": "Defines the structure of a style entity",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "The unique identifier of the style"
        },
        "name": {
            "type": "string",
            "description": "The name of the style"
        },
        "description": {
            "type": ["string", "null"],
            "description": "The description of the style"
        },
        "typeId": {
            "type": "integer",
            "description": "The ID of the style type"
        },
        "type": {
            "type": "string",
            "description": "The name of the style type"
        }
    },
    "required": ["id", "name", "typeId", "type"]
}
