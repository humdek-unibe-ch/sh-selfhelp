{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auth Login Request",
  "description": "Schema for the login request body. Requires user email and password.",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address."
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "description": "User's password."
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false
}
