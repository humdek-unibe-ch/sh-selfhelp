{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Update Group ACLs Request",
  "description": "Schema for bulk updating group ACLs",
  "properties": {
    "acls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "page_id": {
            "type": "integer",
            "description": "Page ID for ACL"
          },
          "acl_select": {
            "type": "boolean",
            "default": true,
            "description": "Select permission"
          },
          "acl_insert": {
            "type": "boolean",
            "default": false,
            "description": "Insert permission"
          },
          "acl_update": {
            "type": "boolean",
            "default": false,
            "description": "Update permission"
          },
          "acl_delete": {
            "type": "boolean",
            "default": false,
            "description": "Delete permission"
          }
        },
        "required": ["page_id"],
        "additionalProperties": false
      },
      "description": "Array of ACLs to update"
    }
  },
  "required": ["acls"],
  "additionalProperties": false
} 