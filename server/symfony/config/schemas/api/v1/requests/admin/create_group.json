{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Create Group Request",
  "description": "Schema for creating a new group",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Group name"
    },
    "description": {
      "type": "string",
      "maxLength": 250,
      "description": "Group description"
    },
    "id_group_types": {
      "type": "integer",
      "description": "Group type ID"
    },
    "requires_2fa": {
      "type": "boolean",
      "default": false,
      "description": "Whether the group requires 2FA"
    },
    "acls": {
      "$ref": "../../common/acl_array.json",
      "description": "Initial ACLs for the group"
    }
  },
  "required": ["name"],
  "additionalProperties": false
} 