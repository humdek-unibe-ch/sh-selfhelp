{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Clear Cache Category Request",
  "description": "Request schema for clearing a specific cache category",
  "properties": {
    "category": {
      "type": "string",
      "enum": [
        "pages",
        "users", 
        "sections",
        "languages",
        "groups",
        "roles",
        "permissions",
        "lookups",
        "assets",
        "frontend_user",
        "cms_preferences",
        "scheduled_jobs"
      ],
      "description": "The cache category to clear"
    }
  },
  "required": ["category"],
  "additionalProperties": false
}
