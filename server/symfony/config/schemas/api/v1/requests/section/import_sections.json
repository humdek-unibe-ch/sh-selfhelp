{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Import Sections Request",
    "description": "Request schema for importing sections to a page or parent section",
    "type": "object",
    "properties": {
        "sections": {
            "type": "array",
            "description": "Array of sections to import",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the section"
                    },
                    "style_name": {
                        "type": "string",
                        "description": "The name of the style to use for the section"
                    },
                    "fields": {
                        "type": "object",
                        "description": "Fields data for the section",
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "description": "The name of the field type"
                                },
                                "translations": {
                                    "type": "array",
                                    "description": "Translations for the field",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "locale": {
                                                "type": "string",
                                                "description": "The locale code of the language"
                                            },
                                            "gender": {
                                                "type": "string",
                                                "description": "The name of the gender"
                                            },
                                            "content": {
                                                "type": "string",
                                                "description": "The translated content"
                                            }
                                        },
                                        "required": ["locale", "content"]
                                    }
                                }
                            }
                        }
                    },
                    "children": {
                        "type": "array",
                        "description": "Child sections to import",
                        "items": {
                            "$ref": "#/properties/sections/items"
                        }
                    }
                },
                "required": ["name"]
            }
        },
        "position": {
            "type": "integer",
            "description": "The position where the sections should be inserted"
        }
    },
    "required": ["sections"]
}
