{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Import Sections Request",
    "description": "Request schema for importing sections to a page or parent section",
    "type": "object",
    "properties": {
        "sections": {
            "type": "array",
            "description": "Array of sections to import",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the section"
                    },
                    "style_name": {
                        "type": "string",
                        "description": "The name of the style to use for the section"
                    },
                    "fields": {
                        "oneOf": [
                            {
                                "type": "object",
                                "description": "Fields data for the section in simplified export format",
                                "additionalProperties": {
                                    "type": "object",
                                    "description": "Field translations organized by locale",
                                    "additionalProperties": {
                                        "type": "object",
                                        "properties": {
                                            "content": {
                                                "type": "string",
                                                "description": "The translated content"
                                            },
                                            "meta": {
                                                "type": ["string", "null"],
                                                "description": "Additional metadata for the field"
                                            }
                                        },
                                        "required": ["content"]
                                    }
                                }
                            },
                            {
                                "type": "array",
                                "description": "Empty array for sections without fields (backward compatibility)",
                                "maxItems": 0
                            }
                        ]
                    },
                    "global_fields": {
                        "type": "object",
                        "description": "Global section fields containing condition, data_config, css, and other section-level properties",
                        "properties": {
                            "condition": {
                                "type": ["string", "null"],
                                "description": "Condition logic for the section"
                            },
                            "data_config": {
                                "type": ["string", "null"],
                                "description": "Data configuration for the section"
                            },
                            "css": {
                                "type": ["string", "null"],
                                "description": "Custom CSS for the section"
                            },
                            "css_mobile": {
                                "type": ["string", "null"],
                                "description": "Mobile-specific CSS for the section"
                            },
                            "debug": {
                                "type": "boolean",
                                "description": "Debug flag for the section"
                            }
                        },
                        "additionalProperties": false
                    },
                    "children": {
                        "type": "array",
                        "description": "Child sections to import",
                        "items": {
                            "$ref": "#/properties/sections/items"
                        }
                    }
                },
                "required": ["name"]
            }
        },
        "position": {
            "type": "integer",
            "description": "The position where the sections should be inserted"
        }
    },
    "required": ["sections"]
}
