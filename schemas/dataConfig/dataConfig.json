{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Data config JSON",
    "type": "array",
    "format": "tabs",
    "items": {
        "type": "object",
        "title": "Data Source",
        "description": "<span>Define the data source from which we can load the fields</span>",
        "format": "grid-strict",
        "properties": {
            "type": {
                "type": "string",
                "title": "Type",
                "description": "Internal is for forms that are created in SelfHelp, EXTERNAL is for upload tables, for example static uploaded data or Qualtrics data",
                "enum": [
                    "INTERNAL",
                    "EXTERNAL"
                ],
                "propertyOrder": 1,
                "options": {
                    "grid_columns": 4
                }
            },
            "current_user": {
                "type": "boolean",
                "title": "Data for the logged user",
                "description": "If true, the loaded data is for the logged user, if false the loaded data is for all users in the system",
                "propertyOrder": 4,
                "options": {
                    "grid_columns": 6
                }
            },
            "all_fields": {
                "type": "boolean",
                "title": "All fields",
                "description": "If true, it loads all fields for the selected table",
                "propertyOrder": 5,
                "options": {
                    "grid_columns": 6
                }
            },
            "table": {
                "type": "string",
                "title": "Table name",
                "description": "The name of the form that we want to load",
                "propertyOrder": 2,
                "options": {
                    "grid_columns": 4
                }
            },
            "retrieve": {
                "type": "string",
                "enum": [
                    "first",
                    "last",
                    "all",
                    "all_as_array"
                ],
                "title": "Return",
                "description": "Return th first record, last record as strong or all records in array for all",
                "propertyOrder": 3,
                "options": {
                    "grid_columns": 4
                }
            },
            "filter": {
                "type": "string",
                "title": "Filter",
                "description": "Advanced option to filter the data.",
                "propertyOrder": 6,
                "options": {
                    "grid_columns": 6
                }
            },
            "fields": {
                "type": "array",
                "title": "Fields",
                "format": "tabs",
                "propertyOrder": 7,
                "items": {
                    "type": "object",
                    "title": "Field",
                    "description": "Field definition",
                    "format": "grid-strict",
                    "properties": {
                        "field_name": {
                            "propertyOrder": 1,
                            "type": "string",
                            "title": "Field name",
                            "description": "The field name in the form, in the uploaded table or the Qualtrics variable",
                            "options": {
                                "grid_columns": 4
                            }
                        },
                        "field_holder": {
                            "propertyOrder": 2,
                            "type": "string",
                            "title": "Field holder",
                            "description": "How we can take the value where we can use it. Always start with `@` and no space",
                            "options": {
                                "grid_columns": 4
                            }
                        },
                        "not_found_text": {
                            "propertyOrder": 3,
                            "type": "string",
                            "title": "Not found",
                            "description": "This text will be shown if the field is not found",
                            "options": {
                                "grid_columns": 4
                            }
                        }
                    },
                    "required": [
                        "field_name",
                        "field_holder",
                        "not_found_text"
                    ]
                }
            }
        },
        "required": [
            "type",
            "table",
            "retrieve"
        ],
        "if": {
            "properties": {
                "all_fields": {
                    "type": "boolean",
                    "enum": [
                        false
                    ]
                }
            }
        },
        "then": {
            "required": [
                "fields"
            ]
        }
    }
}