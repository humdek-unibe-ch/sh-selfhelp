{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "file:///schemas/json-logic/operators/arithmetic/add.json",

  "title": "+",
  "description": "Addition. Because addition is associative, it happily take as many args as you want. Passing just one argument to + casts it to a number.",

  "type": "object",
  "additionalProperties": false,
  "required": ["+"],
  "properties": {
    "+": {
      "$ref": "../../common/one-or-more-args.json"
    }
  },
  "examples": [
    { "+": [4, 2] },
    { "+": [2, 2, 2, 2, 2] },
    { "+": "3.14" }
  ]
}
